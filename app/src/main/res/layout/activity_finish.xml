<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32bc43"
    android:gravity="center"
    tools:context=".view.FinishActivity">
    <!--默认背景为绿色，对勾和圆圈是白色，宽度是1-->
    <com.test.reviewandroid.view.FinishView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:background_color="@color/bg_white"
        app:border_width="10dp"
        app:circle_view_color="#000000"
        app:tick_color="#C34333"
        app:tick_width="10dp" />
</LinearLayout>